<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Controls_App.InputDemo"
             Title="InputDemo">
    <StackLayout>
        
        <!--Checkbox-->
        <CheckBox 
            IsChecked="True"/>

        
        <!--Slider-->
        <Slider
            x:Name="slider" 
            Minimum="0" 
            Maximum="10" 
            MinimumTrackColor="Yellow" 
            MaximumTrackColor="Green" 
            ThumbColor="DarkRed" 
            ValueChanged="slider_ValueChanged"
            />
        <Label 
            x:Name="labelslider"/>
        
        <!--Stepper-->
        
        <Stepper 
            x:Name="stepper" 
            ValueChanged="stepper_ValueChanged"
            Maximum="10"
            Minimum="2"
            Increment="2"/>
       
        
        <Label 
            x:Name="labelstepper"/>

        <!--Switch-->
        <!-- IsToggled="True"-->
        <Switch
           
            
            />




    </StackLayout>
</ContentPage>
